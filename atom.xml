    <link href="http://example.com/2022/07/01/%E6%A0%87%E7%AD%BE%E6%8F%92%E4%BB%B6%E6%A0%B7%E5%BC%8F/"/>
    <id>http://example.com/2022/07/01/%E6%A0%87%E7%AD%BE%E6%8F%92%E4%BB%B6%E6%A0%B7%E5%BC%8F/</id>
